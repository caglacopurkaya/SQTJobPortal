                </div>
            </div>
            <!-- #User Info -->
            <!-- Menu -->
            <div class="menu">
                <ul class="list">

                    @if (User.Identity.IsAuthenticated)

                    {

                        <li class="header">Home Page</li>
                        <li class="active">
                            <a href="/Account/Index/@Model.SeekerId">
                                <i class="material-icons">home</i>
                                <span>Home</span>
                            </a>
                        </li>
                        <li>
                            <a href="/User/CompanyProfile/@Model.SeekerId">
                                <i class="material-icons">person</i> <span>Profile</span>
                            </a>
                        </li>


                        <li>
                            <a href="/User/JobAdversiments/@Model.SeekerId">
                                <i class="material-icons">assignment</i> <span>Job Adversiments</span>
                            </a>
                        </li>

                        <li>
                            <a href="/User/Create/@Model.SeekerId">
                                <i class="material-icons">add </i> <span>  Create Job</span>
                            </a>
                        </li>

                        <li>
                            <a href="@Url.Action("SignOut","Account")">
                                <i class="material-icons">close  </i> <span> Sign Out</span>
                            </a>
                        </li>
                    }

                </ul>>
            </div>

       
            
    <!-- #Footer -->
</aside>
        <!-- #END# Left Sidebar -->
        <!-- Right Sidebar -->
      
        <!-- #END# Right Sidebar -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>DASHBOARD</h2>
            </div>

            <!-- Widgets -->
            <div class="row clearfix">
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="info-box bg-pink hover-expand-effect">
                        <div class="icon">
                            <i class="material-icons">playlist_add_check</i>
                        </div>
                        <div class="content">
                            <div class="text">JOBS COUNT</div>
                            @{var count = 0; }

                            @foreach (ViewModel viewModel in viewModels)
                            {
                                if (Model.Job.Count >= 0)
                                {

                                    count++;
                                }

                            }
                            
                            <div class="number count-to" data-from="0" data-to=@count data-speed="15" data-fresh-interval="20">

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="info-box bg-cyan hover-expand-effect">
                        <div class="icon">
                            <i class="material-icons">help</i>
                        </div>
                        <div class="content">
                            <div class="text">WAITING REQUESTS</div>
                            @{var countt = 0; }

                            @foreach (ViewModel viewModel in viewModels)
                            {
                                if (Model.Job.Count >= 0)
                                {
                                    if (viewModel.request.IsActive == null)
                                    {

                                        countt++;
                                    }
                                }

                            }
                            <div class="number count-to" data-from="0" data-to="@countt" data-speed="1000" data-fresh-interval="20"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="info-box bg-light-green hover-expand-effect">
                        <div class="icon">
                            <i class="material-icons">forum</i>
                        </div>
                        <div class="content">
                            <div class="text">ANSWERED REQUESTS </div>
                            @{var counttt = 0; }

                            @foreach (ViewModel viewModel in viewModels)
                            {
                                if (Model.Job.Count >= 0)
                                {
                                    if (viewModel.request.IsActive != null)
                                    {

                                        counttt++;
                                    }
                                }

                            }
                            <div class="number count-to" data-from="0" data-to="@counttt" data-speed="1000" data-fresh-interval="20"></div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                    <div class="info-box bg-orange hover-expand-effect">
                        <div class="icon">
                            <i class="material-icons">person_add</i>
                        </div>
                        <div class="content">
                            <div class="text">ALL REQUESTS</div>
                            @{var countttt = 0; }

                            @foreach (ViewModel viewModel in viewModels)
                            {
                                if (Model.Job.Count >= 0)
                                {
                                    if (viewModel.request != null)
                                    {

                                        countttt++;
                                    }
                                }

                            }
                            <div class="number count-to" data-from="0" data-to="@countttt" data-speed="1000" data-fresh-interval="20"></div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Widgets -->
            <!-- CPU Usage -->
            <!-- #END# CPU Usage -->
            <div class="row clearfix">
                <!-- Visitors -->
                <!-- #END# Visitors -->
                <!-- Latest Social Trends -->
                <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8" style="margin-left:270px">
                    <div class="card">
                        <div class="body bg-teal">
                            <div class="font-bold m-b--35">TODAYS AGENDA</div>
                        
                            <ul class="dashboard-stat-list">
                              
                             

                                <li>
                                    @{var counts = 0; }


                                    @foreach (ViewModel viewModel in viewModels)
                                    {
                                        if(Model.SeekerId==viewModel.companies.SeekerId)
                                        {

                                            if (viewModel.request.ApplyDate == DateTime.Today)
                                            {

                                                counts++;
                                            }
                                        }

                                    }
                                    TODAY
                                    <span class="pull-right"><b>@counts</b> <small>USERS</small></span>
                                </li>
                                <li>

                                    @{var countss = 0; }


                                    @foreach (ViewModel viewModel in viewModels)
                                    {
                                       
                                            if (viewModel.request.ApplyDate == DateTime.Today.AddDays(-1))
                                            {

                                                countss++;
                                            }
                                        

                                    }
                                    YESTERDAY
                                    <span class="pull-right"><b>@countss</b> <small>USERS</small></span>
                                </li>
                                <li>
                                    @{var countsss = 0; }

                                    @foreach (ViewModel viewModel in viewModels)
                                    {
                                       

                                            if (viewModel.request.ApplyDate < DateTime.Today.AddDays(+8))
                                            {

                                                countsss++;
                                            }


                                        
                                    }
                                    LAST WEEK
                                    <span class="pull-right"><b>@countsss</b> <small>USERS</small></span>
                                </li>
                             
                            </ul>

                                
                                </div>
                    </div>
                </div>
