                </div>*@
                <!-- #END# Latest Social Trends -->
                <!-- Answered Tickets -->
                <!-- #END# Answered Tickets -->
            </div>

            <div class="row clearfix">
                <!-- Task Info -->
                <div class="col-xs-14 col-sm-14 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="header">
                            <h2>SEE LAST JOB ADVERSITEMENTS</h2>
                            <ul class="header-dropdown m-r--5">
                                <li class="dropdown">
                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                        <i class="material-icons">more_vert</i>
                                    </a>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a href="javascript:void(0);">Action</a></li>
                                        <li><a href="javascript:void(0);">Another action</a></li>
                                        <li><a href="javascript:void(0);">Something else here</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="body">
                            <div class="table-responsive">
                                <table class="table table-hover dashboard-task-infos">


                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Title</th>
                                            <th>Status</th>
                                            <th>Category</th>
                                            <th>Country</th>
                                            <th>Salary</th>
                                            <th>Posted Date</th>
                                            <th>Due Date</th>
                                            <th>Edit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{var temp = 0; }
                                        @foreach (ViewModel viewModel in viewModels)
                                        {
                                            if (viewModel.jobs.PostedDate >= DateTime.Now.AddDays(-100) && viewModel.jobs.JobId != temp && Model.SeekerId == viewModel.companies.SeekerId)
                                            {
                                                <tr>
                                                    <td><a href="/User/JobDetails/@viewModel.jobs.JobId"></a>@viewModel.jobs.Title</td>

                                                    @if (Convert.ToInt32(viewModel.jobs.IsActive) == 0)
                                                    {
                                                        <td><span class="label bg-red">Not Active</span></td>

                                                    }
                                                    else
                                                    {
                                                        <td><span class="label bg-green">Active</span></td>

                                                    }


                                                    <td> @viewModel.jobs.Category.CategoryName</td>
                                                    <td><i class="fas fa-map-marker-alt"></i>@viewModel.jobs.User.Country.CountryName</td>
                                                    <td> @viewModel.jobs.Salary </td>
                                                    <td> @String.Format("{0:dd/MM/yyyy}", viewModel.jobs.PostedDate) </td>
                                                    <td> @viewModel.jobs.DueToApply </td>
                                                    <td>
                                                        <div class="progress">
                                                            <div class="progress-bar bg-green" role="progressbar" aria-valuenow="62" aria-valuemin="0" aria-valuemax="100" style="width: 62%"></div>
                                                        </div>
                                                    </td>
                                                    <td> <a href="/User/JobAdversiment/@Model.SeekerId">See details</a></td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- #END# Task Info -->

            </div>
        </div>
    </section>

