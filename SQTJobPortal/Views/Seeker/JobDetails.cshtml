    <main>

        <!-- Hero Area Start-->
        <div class="slider-area ">
            <div class="single-slider section-overly slider-height2 d-flex align-items-center" data-background="assets/img/hero/about.jpg">
                <div class="container">

                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap text-center">
                                <h2>@Model.Category.CategoryName</h2>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
        <!-- Hero Area End -->
        <!-- job post company Start -->
        <div class="job-post-company pt-120 pb-120">
            <div class="container">
                <div class="row justify-content-between">

                    <!-- Left Content -->
                    <div class="col-xl-7 col-lg-8">
                        <!-- job single -->
                        <div class="single-job-items mb-50">
                            <div class="job-items">
                                <div class="company-img company-img-details">
                                    <a href="#"><img src="assets/img/icon/job-list1.png" alt=""></a>
                                </div>
                                <div class="job-tittle">
                                    <a href="#">
                                        <h4>@Model.Title</h4>
                                    </a>
                                    <ul>
                                        <li>@Model.User.TypeofProfession</li>
                                        <li><i class="fas fa-map-marker-alt"></i>@Model.User.Address</li>
                                        <li>@Model.Salary</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- job single End -->

                        <div class="job-post-details">
                            <div class="post-details1 mb-50">
                                <!-- Small Section Tittle -->
                                <div class="small-section-tittle">
                                    <h4>Job Description</h4>
                                </div>
                                <p>@Model.Description</p>
                            </div>
                            <div class="post-details2  mb-50">
                                <!-- Small Section Tittle -->
                                <div class="small-section-tittle">
                                    <h4>Required Knowledge, Skills, and Abilities</h4>
                                </div>
                                <ul>
                                    <li>Profession @Model.Professions.ProfessionName</li>
                                    <li>Skills @Model.Skills</li>

                                </ul>
                            </div>
                            <div class="post-details2  mb-50">
                                <!-- Small Section Tittle -->
                                <div class="small-section-tittle">
                                    <h4>Experience</h4>
                                </div>
                                <ul>
                                    <li>@Model.Experience Year</li>

                                </ul>
                            </div>
                        </div>

                    </div>
                    <!-- Right Content -->
                    <div class="col-xl-4 col-lg-4">
                        <div class="post-details3  mb-50">
                            <!-- Small Section Tittle -->
                            <div class="small-section-tittle">
                                <h4>Job Overview</h4>
                            </div>
                            <ul>
                                <li>Posted date : <span> @String.Format("{0:dd/MM/yyyy}", Model.PostedDate)</span></li>
                                <li>Location : <span>@Model.User.Country.CountryName</span></li>

                                @*buraya başvuranları count yap*@
                                <li>Job Type : <span>@Model.JobType</span></li>
                                <li>Salary :  <span>@Model.Salary</span></li>

                            </ul>

                            <div class="apply-btn2">
                                @*<a href="~/Seeker/CreateRequest/@Model.User.SeekerId" class="btn" style="width:170px; margin-top:10px">Apply Now</a>*@
                                <a href="~/Seeker/CreateRequest/@Model.JobId" class="btn" style="width:170px; margin-top:10px">Apply Now</a>
                            </div>

                        </div>


                        @*BURAYI DÜZELTECEKSİNN!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!*@
                        <div class="post-details4  mb-50">
                            <!-- Small Section Tittle -->

                            <div class="small-section-tittle">
                                <h4>Company Information</h4>
                            </div>
                            <div>
                                <span>@Model.User.Name</span>
                                <p>It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout.</p>
                                <ul>
                                    <li>Name: <span>@Model.User.Name </span></li>
                                    <li>Web : <span> @Model.User.Website</span></li>
                                    <li>Email: <span>@Model.User.ContactMail</span></li>
                                    <li>Phone: <span>@Model.User.Phone</span></li>


                                </ul>

                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div>
