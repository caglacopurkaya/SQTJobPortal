    <!--body-->


    <main style="margin-top:150px;">

        <div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th class="border-top-0">STATUS</th>
                        <th class="border-top-0">COMPANY NAME</th>
                        <th class="border-top-0">COMPANY CONTACT</th>
                        <th class="border-top-0">OPERATION DATE</th>
                        <th class="border-top-0">JOB TITLE</th>
                        <th class="border-top-0">FILE</th>
                   


                    </tr>
                </thead>
                <tbody>

                    @foreach (ViewModel viewModel in viewModels)
                    {
                        string stringToConvert = Convert.ToString(viewModel.request.ApplyDate.Value.ToShortDateString());
                        string stringToConvertt = Convert.ToString(viewModel.jobs.DueToApply.Value.ToShortDateString());
                        var time1 = Convert.ToDateTime(stringToConvertt);
                        var time2 = Convert.ToDateTime(stringToConvert);
                        int result = DateTime.Compare(time1, time2);
                        if (viewModel.request.JobSeekerId== CompanyHelper.id)
                        {
                    <tr>
                        @if (result < 0)
                        {
                            <td><span class="label label-success label-rounded" style="color:red">Tamamlanmadı</span> </td>
                        }
                        @if (result > 0)
                        {
                            <td><span class="label label-danger label-rounded" style="color:green">Tamamlandı</span> </td>
                        }
                        <td>@viewModel.request.Job.User.Name</td>
                        <td>@viewModel.request.Job.User.ContactMail-@viewModel.request.Job.User.Phone</td>
                        <td>@viewModel.request.ApplyDate.Value.ToShortDateString()</td>
                        <td>@viewModel.request.Job.Title</td>
                        @*<td>@viewModel.request.FileDetails.FileName</td>*@
                        <td><a style="color:black">@Html.ActionLink("Download Your CV", "Download", "Seeker", new { id = @viewModel.files.Id, style = "color: Black" }, null)</a></td>


                    </tr>

                        }

                    }
                </tbody>
            </table>
        </div>

    </main>




